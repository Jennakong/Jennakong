<!-- Comment form functionality -->
<script>
  const form = document.getElementById("comment-form");
  const message = document.getElementById("comment-msg");

  form.addEventListener("submit", function(e) {
    e.preventDefault();
    const formData = new FormData(form);

    fetch("https://docs.google.com/forms/d/e/1FAIpQLSdYJTIjXG7i57qdtO3Mio3_MyF7q9aevwDkzIr4-4ew6SSEjQ/formResponse", {
      method: "POST",
      mode: "no-cors",
      body: formData
    }).then(() => {
      form.reset();
      message.innerText = "üéâ Thanks for your comment!";
      message.style.display = "block";
      message.style.color = "#1c1c1c";
      message.style.fontWeight = "500";
    }).catch(() => {
      message.innerText = "Oops! Something went wrong. Try again later.";
      message.style.display = "block";
      message.style.color = "red";
    });
  });
</script>

<!-- Optional: Load submitted comments (if you have your JSON endpoint ready) -->
<script>
  async function loadComments() {
    const response = await fetch('https://script.google.com/macros/s/AKfycbz69qDugQiVrmKGVzSDPH2SdLLVNtUJRkNDa8PFmUe1wr0n3f2OcGdZi8an2uDWJ5KM/exec');
    const data = await response.json();

    const commentList = document.getElementById('comment-list');
    commentList.innerHTML = '';

  data.forEach(entry => {
  console.log(entry); // üëà See what data is actually coming through
  
  const name = entry.name || 'Anonymous';
  const comment = entry.comment;

  const commentDiv = document.createElement('div');
  commentDiv.classList.add('comment-item');
  commentDiv.style.marginBottom = "20px";
  commentDiv.style.padding = "15px";
  commentDiv.style.border = "1px solid #ddd";
  commentDiv.style.borderRadius = "8px";
  commentDiv.style.backgroundColor = "#fff";

  commentDiv.innerHTML = `
    <h5 style="margin: 0 0 8px;">${name}</h5>
    <p style="margin: 0;">${comment}</p>
  `;
  commentList.appendChild(commentDiv);
});

  document.addEventListener('DOMContentLoaded', loadComments);
</script>
